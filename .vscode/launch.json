{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Current File (With Root)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "MPLBACKEND": "TkAgg"
            }
        }
    ]
}
